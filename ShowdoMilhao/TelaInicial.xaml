<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowdoMilhao.TelaInicial"
             Shell.NavBarIsVisible="false"
             BackgroundColor="#5c2f18">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="pizza.png" WidthRequest="300" HeightRequest="300" HorizontalOptions="Center"/>

        <Label Text="Venha testar os seus conhecimentos de fnaf. 
Esse jogo é um jogo de perguntas em que cada pergunta é uma mais difícil que a outra."
               TextColor="White" 
               FontSize="20"
               HorizontalTextAlignment="Center"
               Margin="20,30,20,10" />

        <Button Text="Começar o jogo"
                Background="#a52a2a"
                WidthRequest="200"
                HeightRequest="50"
                HorizontalOptions="Center"
                Clicked="OnStartGameClicked" />
    </StackLayout>
</ContentPage>
