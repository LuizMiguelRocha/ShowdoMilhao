<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowdoMilhao.MainPage">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">

            <!-- Caixa grande no topo (pode ser uma imagem, rótulo ou outro conteúdo) -->
            <Frame HeightRequest="150" BackgroundColor="LightGray">
                <Label Text="Título ou Imagem"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Large" />
            </Frame>

            <!-- Caixa de texto maior -->
            <Frame HeightRequest="100" BackgroundColor="LightGray">
                <Label Text="Texto ou outro conteúdo"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <!-- Botões no lugar das caixas de texto -->
            <Button Text="Botão 1" HeightRequest="50" />
            <Button Text="Botão 2" HeightRequest="50" />
            <Button Text="Botão 3" HeightRequest="50" />
            <Button Text="Botão 4" HeightRequest="50" />
            <Button Text="Botão 5" HeightRequest="50" />

            <!-- Botões pequenos na parte inferior -->
            <Grid ColumnDefinitions="*,*,*">
                <Button Text="Botão 6" Grid.Column="0" />
                <Button Text="Botão 7" Grid.Column="1" />
                <Button Text="Botão 8" Grid.Column="2" />
            </Grid>

        </StackLayout>
    </ScrollView>

</ContentPage>
